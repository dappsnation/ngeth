{
  "projectType": "library",
  "root": "packages/ipfs",
  "sourceRoot": "packages/ipfs/src",
  "prefix": "nxeth",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "nx run ipfs:build-package:production",
            "nx run ipfs:build-tools"
          ]
        },
        "development": {
          "commands": [
            "nx run ipfs:build-package:development",
            "nx run ipfs:build-tools"
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "build-tools": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/ipfs/tools",
        "main": "packages/ipfs/src/tools",
        "tsConfig": "packages/ipfs/tsconfig.tools.json",
        "assets": [{
          "input": "packages/ipfs/builders",
          "glob": "**/*.json",
          "ignore": [],
          "output": "/builders"
        }, {
          "input": "packages/ipfs/schematics",
          "glob": "**/*.json",
          "ignore": [],
          "output": "/schematics"
        }]
      }
    },
    "build-package": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/packages/ipfs"],
      "options": {
        "project": "packages/ipfs/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ipfs/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ipfs/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ipfs"],
      "options": {
        "jestConfig": "packages/ipfs/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/ipfs/src/**/*.ts",
          "packages/ipfs/src/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
