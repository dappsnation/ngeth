{
  "root": "packages/tools",
  "sourceRoot": "packages/tools/src",
  "targets": {
    "link": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm link dist/packages/tools"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --tag={args.tag} --access=public",
        "cwd": "dist/packages/tools"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/tools",
        "main": "packages/tools/src/index.ts",
        "tsConfig": "packages/tools/tsconfig.lib.json",
        "assets": [
          "packages/tools/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/tools/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/tools"
      ],
      "options": {
        "jestConfig": "packages/tools/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
