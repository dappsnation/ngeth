{
  "root": "packages/hardhat",
  "sourceRoot": "packages/hardhat/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx run hardhat:build-package",
          "nx run hardhat:build-tools"
        ]
      }
    },
    "build-package": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/hardhat",
        "tsConfig": "packages/hardhat/tsconfig.lib.json",
        "packageJson": "packages/hardhat/package.json",
        "main": "packages/hardhat/src/index.ts",
        "assets": ["packages/hardhat/*.md"]
      }
    },
    "build-tools": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/hardhat/tools",
        "main": "packages/hardhat/src/tools",
        "tsConfig": "packages/hardhat/tsconfig.tools.json",
        "assets": [
          {
            "input": "packages/hardhat/builders",
            "glob": "**/*.json",
            "ignore": [],
            "output": "/builders"
          },
          {
            "input": "packages/hardhat/schematics",
            "glob": "**/*.json",
            "ignore": [],
            "output": "/schematics"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/hardhat/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/hardhat"],
      "options": {
        "jestConfig": "packages/hardhat/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
