{
  "projectType": "library",
  "root": "packages/hardhat",
  "sourceRoot": "packages/hardhat/src",
  "prefix": "nxeth",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx run hardhat:build-package:production",
          "nx run hardhat:build-tools"
        ]
      }
    },
    "build-package": {
      "executor": "@nrwl/node:package",
      "outputs": ["dist/packages/hardhat"],
      "options": {
        "main": "packages/hardhat/src/index.ts"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/hardhat/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/hardhat/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "build-tools": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/hardhat/tools",
        "main": "packages/hardhat/src/tools",
        "tsConfig": "packages/hardhat/tsconfig.tools.json",
        "assets": [
          {
            "input": "packages/hardhat/builders",
            "glob": "**/*.json",
            "ignore": [],
            "output": "/builders"
          },
          {
            "input": "packages/hardhat/schematics",
            "glob": "**/*.json",
            "ignore": [],
            "output": "/schematics"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/hardhat"],
      "options": {
        "jestConfig": "packages/hardhat/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/hardhat/src/**/*.ts",
          "packages/hardhat/src/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
